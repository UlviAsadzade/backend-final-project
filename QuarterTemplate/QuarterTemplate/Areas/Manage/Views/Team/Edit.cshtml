@model Team
@{
    ViewData["Title"] = "Edit";
}


<div class="container-fluid">
    <h1>Edit</h1>
    <form method="post" enctype="multipart/form-data">
        <div class="form-row">
            <div class="form-group ">
                <label asp-for="FullName">FullName</label>
                <input asp-for="FullName" class="form-control" placeholder="FullName">
                <span class="text-danger" asp-validation-for="FullName"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group ">
                <label asp-for="Desc">Desc</label>
                <input asp-for="Desc" class="form-control" placeholder="Desc">
                <span class="text-danger" asp-validation-for="Desc"></span>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group">
                <label asp-for="ImageFile">ImageFile</label>
                <input asp-for="ImageFile" class="form-control" placeholder="ImageFile">
                <span class="text-danger" asp-validation-for="ImageFile"></span>
            </div>
        </div>
        <div class="img-box" style="display: inline-block; position: relative;">
            <input type="hidden" name="Image" value="@Model.Image" />
            <img style="max-width:300px" src="~/uploads/team/@Model.Image" alt="Alternate Text" />
            <span class="remove-img-box" style="position: absolute; top: -10px; right: -5px; cursor:pointer">
                <i class="fa fa-times" style="color: red; font-size: 24px;"></i>
            </span>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Edit</button>
        </div>

    </form>
</div>









