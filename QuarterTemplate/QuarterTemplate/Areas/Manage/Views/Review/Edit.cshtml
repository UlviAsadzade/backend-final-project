@model Review
@{
    ViewData["Title"] = "Edit";
}


<div class="container-fluid">
    <h1>Edit</h1>
    <div class="card" style="width: 40%; margin:0 auto;">
        <div class="card-body">
            <p class="card-text">
                Product Name - @Model.Product.Name
            </p>
            <p class="card-text">
                User Name - @Model.AppUser.UserName
            </p>
            <p class="card-text">
                Member Email - @Model.AppUser.Email
            </p>
            <p class="card-text">
                Comment - @Model.Text
            </p>

            <p class="card-text">
                Date - @Model.CreatedAt.AddHours(4).ToString("HH:mm dd MMM yyyy")
            </p>

            <p class="card-text">
                Order Status - @Model.IsAccepted
            </p>

        </div>

        <div class="card-body">
            <a asp-action="accept" asp-route-id="@Model.Id" class="btn btn-success">Accept</a>
            <a asp-action="reject" asp-route-id="@Model.Id" class="btn btn-danger">Reject</a>
        </div>
    </div>
</div>






