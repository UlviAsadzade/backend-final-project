@model Order
@{
    ViewData["Title"] = "Edit";
}


<div class="container-fluid">
    <h1>Edit</h1>
    <div class="card" style="width: 40%; margin:0 auto;">
        <div class="card-body">

            <p class="card-text">
                Full Name - @Model.FullName
            </p>
            <p class="card-text">
                Email - @Model.Email
            </p>

            <p class="card-text">
                Product Name - @Model.ProductName
            </p>

            <p class="card-text">
                Total Amount - @Model.SalePrice
            </p>

            <p class="card-text">
                Address - @Model.Address
            </p>

            <p class="card-text">
                Date - @Model.CreatedAt.AddHours(4).ToString("HH:mm dd MMM yyyy")
            </p>

            <p class="card-text">
                Status - @Model.Status
            </p>
        </div>
        <div class="card-body">
            <a asp-action="accept" asp-route-id="@Model.Id" class="btn btn-success">Accept</a>
            <a asp-action="reject" asp-route-id="@Model.Id" class="btn btn-danger">Reject</a>
        </div>
    </div>
</div>


