@model Product

<div class="row">
    <div class="col-lg-6 col-12">
        <div class="modal-product-img">
            <img src="~/uploads/product/@Model.ProductImages.FirstOrDefault(x=>x.IsPoster==true)?.Image" alt="#">
        </div>
    </div>
    <div class="col-lg-6 col-12">
        <div class="modal-product-info">
            <div class="product-ratting">
                <ul>
                    @if (Model.Reviews.Count() > 0)
                    {

                        @for (int i = 0; i < Math.Ceiling((double)(Model.Reviews.Average(x => x.Rate))); i++)
                        {
                            <li><a href="#"><i class="fas fa-star"></i></a></li>
                        }

                        <li class="review-total"> <a href="#"> ( @Model.Reviews.Count() Reviews )</a></li>
                    }

                   
                </ul>
            </div>
            <h3><a href="product-details.html">@Model.Name</a></h3>
            <div class="product-price">
                <span>$@Model.SalePrice</span>
            </div>
            <hr>
            <div class="modal-product-brief">
                <p>@Model.Desc</p>
            </div>
            <div class="modal-product-meta ltn__product-details-menu-1 d-none">
                <ul>
                    <li>
                        <strong>Categories:</strong>
                        <span>
                            <a href="#">Parts</a>
                            <a href="#">Car</a>
                            <a href="#">Seat</a>
                            <a href="#">Cover</a>
                        </span>
                    </li>
                </ul>
            </div>
            
            <!-- <hr> -->
            <div class="ltn__product-details-menu-3">
                <ul>
                    <li>
                        <a href="#" class="" title="Wishlist" data-bs-toggle="modal" data-bs-target="#liton_wishlist_modal">
                            <i class="far fa-heart"></i>
                            <span>Add to Wishlist</span>
                        </a>
                    </li>
                    <li>
                        <a href="#" class="" title="Compare" data-bs-toggle="modal" data-bs-target="#quick_view_modal">
                            <i class="fas fa-exchange-alt"></i>
                            <span>Compare</span>
                        </a>
                    </li>
                </ul>
            </div>
            <hr>
            <div class="ltn__social-media">
                <ul>
                    <li>Share:</li>
                    <li><a href="#" title="Facebook"><i class="fab fa-facebook-f"></i></a></li>
                    <li><a href="#" title="Twitter"><i class="fab fa-twitter"></i></a></li>
                    <li><a href="#" title="Linkedin"><i class="fab fa-linkedin"></i></a></li>
                    <li><a href="#" title="Instagram"><i class="fab fa-instagram"></i></a></li>

                </ul>
            </div>
            <label class="float-end mb-0"><a class="text-decoration" asp-controller="product" asp-action="detail" asp-route-id="@Model.Id"><small>View Details</small></a></label>
        </div>
    </div>
</div>
